{% if data.charts.word_cloud %}
<div>
    <p>{% trans %}Most common words from the description of the first 30 NGOs.{% endtrans %}</p>
    <ul class="list ma0 pa0">
        {% set max_count = data.charts.word_cloud.values()|list|first %}
        {% set min_count = data.charts.word_cloud.values()|list|last %}
        {% set scaling = 50 if max_count > min_count else 20 %}
        {% for word, count in data.charts.word_cloud.items() %}
        <li class="dib ma0 pa0">
            <a class="{{ loop.cycle('green b', 'dark-green') }} link dim"
               style="font-size: {{ ((count / max_count) * scaling) + 10 }}px;"
               href="#">
                {{ word }}
            </a>
        </li>
        {% endfor %}
    </ul>
</div>
{% endif %}
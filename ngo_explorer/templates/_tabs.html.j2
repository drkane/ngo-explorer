{% macro tabs(current_page, pages) %}
<nav class="w-100 mb4 cf" id="tabs">
    <ul class="list mh0 mv2 pa0">
    {% for page_id, page  in pages.items() %}
        <li class="mr2 dib-ns db flex tab">
        {% if current_page==page_id %}
            <a class="link pa2 f5-ns f5 w-100 w-auto-ns tab-url bb bw2 b--light-green korolev light-green" href="{{ page.url }}" id="tab-{{ page_id }}">{{ page.name }}</a>
        {% else %}
            <a class="link pa2 f5-ns f5 w-100 w-auto-ns tab-url korolev dark-gray" href="{{ page.url }}" id="tab-{{ page_id }}">{{ page.name }}</a>
        {% endif %}
        </li>
    {% endfor %}
    </ul>
</nav>
{% endmacro %}